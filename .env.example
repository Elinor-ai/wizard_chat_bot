# Web + API shared
NODE_ENV=development
PORT=4000
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000
NEXT_PUBLIC_FIREBASE_PROJECT_ID=wizard-dev
NEXT_PUBLIC_DEV_BYPASS=true

# Google auth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Firestore / GCP
FIRESTORE_PROJECT_ID=wizard-dev
GOOGLE_APPLICATION_CREDENTIALS=./config/service-account.json

# Redis
REDIS_URL=redis://localhost:6379

# Observability
LOG_LEVEL=info
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
ELASTICSEARCH_URL=https://your-elasticsearch-url:9200
ELASTICSEARCH_INDEX=wizard-logs
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_TLS=false

# LLM providers
LLM_CHAT_PROVIDER=openai:gpt-4o-mini
LLM_CHAT_API_KEY=
LLM_ASSET_COPY_PROVIDER=openai:gpt-4o-mini
LLM_ASSET_COPY_API_KEY=
LLM_CHANNEL_PROVIDER=openai:gpt-4o-mini
LLM_CHANNEL_API_KEY=
LLM_IMAGE_PROVIDER=openai:dall-e-3
LLM_IMAGE_API_KEY=
LLM_VIDEO_PROVIDER=runway:gen-2
LLM_VIDEO_API_KEY=

# Credits
CREDIT_PER_1000_TOKENS=10
